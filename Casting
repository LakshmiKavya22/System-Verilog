///STATIC CASTING///
module top;
 	 int a; //signed Data type (32 bit Wide)
 	 byte unsigned b;//Unsigned data Type (8-bit Wide)
  	initial begin
  	a=-30;
    	b=a; //Implicit conversion :For simple codes
    	$display(" b=%0d", b);
    	b=byte'(a);   //Explicit Conversion :For complex codes
    	$display(" b=%0d", b);
  	end
	endmodule


////DYANAMIC CASTING///
//Down_casting
class ethernet_packet;
  int a;
endclass
class good_ethernet_packet extends ethernet_packet;
  int b;
endclass
module tb;
  bit y;
  ethernet_packet eth_pkt;
  good_ethernet_packet g_pkt;
  initial begin
    eth_pkt=new();
    g_pkt=new();
    $cast(g_pkt,eth_pkt);
    y=$cast(g_pkt,eth_pkt);
    $display("Y=%0d",y);
  end
endmodule'
//*SYSTEM TASK O/P : Illegal conversion to object of class good_ethernet_packet from object of class ethernet_packet.
SYSTEM FUNCTION O/P: Y=0*//



//UP_casting
class ethernet_packet;
  int a;
endclass
class good_ethernet_packet extends ethernet_packet;
  int b;
endclass
module tb;
  bit y;
  ethernet_packet eth_pkt;
  good_ethernet_packet g_pkt;
  initial begin
    eth_pkt=new();
    g_pkt=new();
    $cast(eth_pkt,g_pkt);
    y=$cast(eth_pkt,g_pkt);
    $display("Y=%0d",y);
  end
endmodule
//SYSTEM TASK O/P : Compile success 0 Errors 0 Warnings 
//SYSTEM FUNCTION O/P: Y=1
