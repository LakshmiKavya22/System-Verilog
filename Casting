///STATIC CASTING///
module top;
 	 int a; //signed Data type (32 bit Wide)
 	 byte unsigned b;//Unsigned data Type (8-bit Wide)
  	initial begin
  	a=-30;
    	b=a; //Implicit conversion :For simple codes
    	$display(" b=%0d", b);
    	b=byte'(a);   //Explicit Conversion :For complex codes
    	$display(" b=%0d", b);
  	end
	endmodule


////DYANAMIC CASTING///
class eth_pkt;
  int count ;
endclass

class eth_good_pkt extends eth_pkt;
  int a;
endclass

module top;
bit f;
  eth_pkt pkt=new();
  eth_good_pkt g_pkt=new();	
  initial begin
   $cast ( g_pkt,pkt) ; // $cast is called System Task
   //f=$cast ( pkt,g_pkt) ; // System Function
  end
endmodule
