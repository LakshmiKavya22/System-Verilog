///STATIC CASTING///
module top;
 	 int a;
 	 byte unsigned b;
  	initial begin
  	a=-30;
    	b=a;
    	$display(" b=%0d", b);
    	b=byte'(a);
    	$display(" b=%0d", b);
  	end
	endmodule


////DYANAMIC CASTING///
class eth_pkt;
  int count ;
endclass

class eth_good_pkt extends eth_pkt;
  int a;
endclass

module top;
bit f;
  eth_pkt pkt=new();
  eth_good_pkt g_pkt=new();	
  initial begin
   $cast ( g_pkt,pkt) ; // $cast is called System Task
   //f=$cast ( pkt,g_pkt) ; // System Function
  end
endmodule
